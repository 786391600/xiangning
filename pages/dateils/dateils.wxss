@import '../../utils/iconfont.wxss';
/* @import "../../wxParse/wxParse.wxss"; */
.dateilsBox{
  background: #F0F0F0;
  padding: 70rpx 30rpx 0;
  padding-bottom: 30rpx;
}
.dateilsBox>.dateilsTitle{
   background:radial-gradient(rgba(0, 0, 0, 0) 0,rgba(0, 0, 0, 0) 10rpx, #1AAD19 10rpx);
  background-size: 30rpx 30rpx;
  /* background-repeat: no-repeat; */
  background-position-y: 15rpx;
  width: 100%;
  height:300rpx;
  border-radius: 20rpx 20rpx 0 0;
  overflow: hidden;
   padding-bottom: 20rpx; 
}
.dateilsTitle>view{
  text-align: center;
  line-height: 310rpx;
  color:white;
  background: #1AAD19;
}
.dateilsCon{
  background:radial-gradient(rgba(0, 0, 0, 0) 0,rgba(0, 0, 0, 0) 10rpx, white 10rpx);
  background-size: 30rpx 30rpx;
   background-position-y: -15rpx;
   padding-top: 18rpx;
   padding-bottom: 15rpx;
}
.dateilsCon>view{
  width:100%;
  height: 100%;
  background: white;
  overflow: hidden;
}
.dateilsCon button{
  width:80%;
  margin-top: 50rpx;
  margin-bottom: 35rpx;
}
.dateilsConBox{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  font-size: 30rpx;
  box-sizing: border-box;
  padding: 0 15rpx 0;
}
.dateilsConBox-left{
  width:25%;
  height:100rpx;
  text-align: center;
}
.dateilsConBox-right{
  width:80%;
}

/*评论框*/
.transiation{
  width: 100%;
  background: white;
  padding-left: 15rpx;
  padding-right: 15rpx;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.transiation-top{
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
  box-sizing: border-box;
  border-bottom: 1rpx solid #ccc;
  padding-bottom: 15rpx;
  padding-top: 15rpx;
}
.transiation-top>view{
  font-size: 30rpx;
}
.transiation-top .readComment{
  color:#1AAD19;
}
.noTransiation{
   font-size: 32rpx;
   height: 180rpx;
   text-align: center;
   display: flex;
   align-items:center;
   justify-content:center;
   color:#ccc;
}
.noTransiation .icon-onTransiation{
  font-size: 70rpx;
}
.fuwenben{
  padding: 0 20rpx 0;
}
