/* pages/Testpage/Loading/index.wxss */

.tui-loading-row {
  width: 100%;
  height: 100vh;
  display: table;
  table-layout: fixed;
  background-color: #fff;
  position: fixed;
  top: 0;
}

.tui-loading-cell {
  width: 100%;
  display: table-cell;
  text-align: center;
}

/*动画一：单个渐变  */

.circle-round-fade {
  width: 100px;
  height: 100px;
  display: inline-block;
  position: relative;
  margin-top: 400rpx;
  transform: rotate(360deg);
  transition: transform 1.5s linear;
  
  animation: spin 1.5s linear infinite;
}

.circle-round-fade text {
  display: block;
  width: 50%;
  height: 28px;
  opacity: 0.7;
  position: absolute;
  top: calc(50% - 14px);
  left: 0px;
  transform-origin: center right;
  animation: circle 1.5s linear infinite;
}

.circle-round-fade text:nth-child(1)::before {
  content: '';
  display: block;
  width: 7rpx;
  height: 7rpx;
  position: absolute;
  top: 0;
  right: 10px;
  background-color: #ff4b4b;
  border-radius: 50%;
}

