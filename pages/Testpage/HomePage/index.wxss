/* pages/Testpage/HomePage/index.wxss */

#search {
  width: 100%;
  height: 104rpx;
  background: rgb(196, 194, 194);
  position: fixed;
  top: 0;
}

#header {
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: center;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #ededed;
  position: fixed;
  top: 104rpx;
  background: #fff;
}

.hewder-name {
  line-height: 90rpx;
  padding: 0 25rpx;
  margin: 0 auto;
}

.active {
  border-bottom: 2rpx solid #000;
}

.activity {
  width: 690rpx;
  height: 405rpx;
  margin: 0 auto;
  margin-top: 29rpx;
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
  border: 1rpx solid #eef0ed;
}

.activity-image {
  width: 100%;
  height: 300rpx;
}
.activity-image image{
  width: 100%;
  height: 100%;
}

.activity-title {
  width: 100%;
  height: 105rpx;
  font-size: 26rpx;
  font-weight: bold;
  line-height: 105rpx;
  padding-left: 22rpx;
}

/* 活动页面 */

.context {
  background: #fff;
  overflow: hidden;
  margin-top: 194rpx;
  margin-bottom: 30rpx;
}

.foot {
  width: 100%;
  height: 96rpx;
}

/* 底部导航 */

#footer {
  width: 100%;
  height: 96rpx;
  position: fixed;
  bottom: 0;
  border-top: 1rpx solid #f2f1f6;
  background: #fff;
}

#footer .HomeMy {
  width: 50%;
  height: 96rpx;
  float: left;
}

.HomeMy image {
  width: 36rpx;
  height: 36rpx;
  background: #000;
}

.HomeMy-image {
  text-align: center;
  margin-top: 16rpx;
}

.HomeMy-name {
  text-align: center;
  font-size: 20rpx;
  margin-top: 9rpx;
}

.context-banner {
  width: 100%;
  overflow: hidden;
}

.banner-time {
  width: 100%;
  text-align: center;
  font-size: 54rpx;
  margin-top: 81rpx;
}

.Underline {
  width: 122rpx;
  height: 36rpx;
  margin: 0 auto;
  border-bottom: 2px solid #ccc;
}

.banner-title {
  width: 654rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 24rpx;
  margin-top: 31rpx;
}

.banner-image {
  width: 669rpx;
  height: 712rpx;
  margin: 0 auto;
  margin-top: 67rpx;
}

.banner-image image {
  width: 100%;
  height: 100%;
}

.Recommend {
  width: 100%;
  padding: 0 31rpx;
  color: #df392d;
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 38rpx;
}

/* 商品页面样式 */

#commodity {
  background: #fff;
  overflow: hidden;
  margin-top: 194rpx;
}
.commodity-Recommend{
  width: 100%;
  height: 838rpx;
  border-bottom: 20rpx solid #f2f2f2;
}
.Recommend-image{
  width: 479rpx;
  height: 479rpx;
  margin: 0 auto;
  margin-top: 39rpx;
}
.Recommend-image image{
  width: 100%;
  height: 100%;
}
.Recommend-Price{
  margin-top: 51rpx;
  font-size: 44rpx;
  color: #ff0813;
  text-align: center;
  font-weight: bold;
}
.Recommend-title{
  margin-top: 19rpx;
  font-size: 24rpx;
  text-align: center;
  font-weight: bold;
}
.Recommend-button{
  width: 668rpx;
  height: 92rpx;
  margin: 0 auto;
  background: linear-gradient(to right, #ff5d4f , #ff2022);
  margin-top: 50rpx;
  border-radius: 15rpx;
  color: #ffffff;
  text-align: center;
  line-height: 92rpx;
  font-size: 30rpx;
  font-weight: bold;
}
.Singlecommodity{
  width: 100%;
}
.Singlecommodity-con{
  width: 100%;
  height: 360rpx;
  border-bottom: 1rpx solid #dadada;
  overflow: hidden;
}
.Singlecommodity-image{
  width: 270rpx;
  height: 270rpx;
  margin-top: 48rpx;
  margin-left: 34rpx;
  float: left;
}
.Singlecommodity-image image{
  width: 100%;
  height: 100%;
}
.Singlecommodity-title{
  font-size: 24rpx;
  margin-top: 92rpx;
  margin-left: 25rpx;
  font-weight: bold;
  float: left;
}
.Singlecommodity-Price{
  font-size: 31rpx;
  float: left;
  margin-top: 119rpx;
  color: #ff0f3c;
}
.Singlecommodity-button{
  width: 160rpx;
  height: 60rpx;
  background: linear-gradient(to right, #ff5d4f , #ff2022);
  color: #ffffff;
  text-align: center;
  line-height: 60rpx;
  font-size: 24rpx;
  font-weight: bold;
  margin-top: 102rpx;
  margin-right: 45rpx;
  float: right;
  border-radius: 10rpx;
}